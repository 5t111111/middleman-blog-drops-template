source 'https://rubygems.org'
source 'https://rails-assets.org'

# middleman
gem 'middleman', '~> 3.3.7'

# use oga for html parser (without nokogiri)
gem 'middleman-blog', :github => '5t111111/middleman-blog',
                      :branch => 'with-oga'
gem 'oga', '~> 0.2.0'

# For syntax highlighting
gem 'middleman-syntax', '~> 2.0.0'

# Live-reloading plugin
gem 'middleman-livereload', '~> 3.4.2'

# For feed.xml.builder
gem 'builder', '~> 3.2.2'

# For using Slim template
gem 'slim', '~> 3.0.1'

# For Markdown
gem 'redcarpet', '~> 3.2.2'

# For sitemap
gem 'sitemap_generator', '~> 5.0.5'

# Compass plugins
gem 'breakpoint', '~> 2.5.0'

# Rails Assets
gem 'rails-assets-font-awesome', '~> 4.3.0', :require => false

# Web server
gem 'puma', '~> 2.11.0'

# to serve static files
gem 'rack-contrib', '~> 1.2.0'

# Heroku New Relic Addon
gem 'newrelic_rpm'
